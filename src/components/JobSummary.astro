---
import infy from '../icons/infosys.svg'
import chera from '../images/chera2.png'
import scu from '../images/santa_clara_university_logo.jpeg'
import { Image } from 'astro:assets'
const {companyName, desc, title, startDate, endDate, iconFor}=Astro.props
const iconMap={
    'infosys':infy,
    'chera':chera,
    'scu':scu
}
---

<div class="py-6 px-7 border border-white rounded-lg text-white my-8">
    <div class="md:flex md:justify-between md:text-2xl text-xl">
        <span class="inline-flex">
            <Image src={iconMap[iconFor]} alt="logo" class="h-8 w-8 mr-2"/> 
            {title} at {companyName}
        </span> 
        <span>{startDate}-{endDate}</span>
    </div>
    <p class="pt-6 text-base">{desc}</p>
</div>